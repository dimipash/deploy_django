{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile"
    },
    "deploy": {
        "healthcheckPath": "/health/",
        "healthcheckTimeout": 300,
        "startupTimeout": 300,        
        "restartPolicyType": "ALWAYS",
        "restartPolicyMaxRetries": 10
    }
}